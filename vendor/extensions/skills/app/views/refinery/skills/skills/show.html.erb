<% content_for :body_content_title do %>
  <%= @skill.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @skill.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="skills">
      <% @skills.each do |skill| %>
        <li>
          <%= link_to skill.name, refinery.skills_skill_path(skill) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
