<ul>
  <% if ::Refinery::EmployeeSkills::Admin::EmployeeSkillsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.employee_skills_admin_employee_skills_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_employee_skills_admin_employee_skill_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::EmployeeSkills::Admin::EmployeeSkillsController.sortable? && ::Refinery::EmployeeSkills::EmployeeSkill.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Employee Skills"),
                 refinery.employee_skills_admin_employee_skills_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Employee Skills"),
                 refinery.employee_skills_admin_employee_skills_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
