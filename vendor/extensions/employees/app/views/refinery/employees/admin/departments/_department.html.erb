<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(department) -%>">
  <span class='title'>
    <%= department.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.employees_department_path(department),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_employees_admin_department_path(department),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.employees_admin_department_path(department),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => department.name),
        :method => :delete %>
  </span>
</li>
