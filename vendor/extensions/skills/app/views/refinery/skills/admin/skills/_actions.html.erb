<ul>
  <% if ::Refinery::Skills::Admin::SkillsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.skills_admin_skills_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_skills_admin_skill_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Skills::Admin::SkillsController.sortable? && ::Refinery::Skills::Skill.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Skills"),
                 refinery.skills_admin_skills_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Skills"),
                 refinery.skills_admin_skills_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
